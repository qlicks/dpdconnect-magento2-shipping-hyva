<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="checkout.shipping.methods.after">
            <block template="Hyva_DpdConnectShipping::checkout/shipping/dpdshipping.phtml">
                <block class="DpdConnect\Shipping\Block\GoogleMaps" name="dpd.googlemaps.api"
                       template="DpdConnect_Shipping::checkout/shipping/googlemaps.phtml"/>
            </block>
        </referenceContainer>

        <referenceBlock name="checkout.shipping.methods">
            <block name="dpdpickup_dpdpickup"
                   template="Hyva_DpdConnectShipping::checkout/shipping/method/dpdpickup.phtml"/>
        </referenceBlock>
        <referenceBlock name="checkout.shipping-details.address-list.list">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Hyva_DpdConnectShipping::checkout/address-view/address-list/list.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="checkout.shipping-details.address-list.grid">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Hyva_DpdConnectShipping::checkout/address-view/address-list/grid.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
